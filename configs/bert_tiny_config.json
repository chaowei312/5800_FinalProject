{
  "model_name": "bert-tiny",
  "pretrained_path": "bert-tiny/pytorch_model.bin",
  "vocab_file": "bert-tiny/vocab.txt",
  "architecture": {
    "vocab_size": 30522,
    "hidden_size": 128,
    "num_hidden_layers": 2,
    "num_attention_heads": 2,
    "intermediate_size": 512,
    "hidden_act": "gelu",
    "hidden_dropout_prob": 0.1,
    "attention_probs_dropout_prob": 0.1,
    "max_position_embeddings": 512,
    "type_vocab_size": 2,
    "initializer_range": 0.02,
    "layer_norm_eps": 1e-12,
    "pad_token_id": 0,
    "position_embedding_type": "absolute",
    "use_cache": true,
    "classifier_dropout": null
  },
  "training_defaults": {
    "learning_rate": 5e-5,
    "num_epochs": 10,
    "batch_size": 32,
    "gradient_accumulation_steps": 1,
    "warmup_steps": 100,
    "weight_decay": 0.01,
    "max_grad_norm": 1.0
  },
  "description": "Tiny BERT model with 4.4M parameters, suitable for quick experiments and limited resources"
}
