{
  "model_name": "bert-mini",
  "pretrained_path": "bert-mini/pytorch_model.bin",
  "vocab_file": "bert-mini/vocab.txt",
  "architecture": {
    "vocab_size": 30522,
    "hidden_size": 256,
    "num_hidden_layers": 4,
    "num_attention_heads": 4,
    "intermediate_size": 1024,
    "hidden_act": "gelu",
    "hidden_dropout_prob": 0.1,
    "attention_probs_dropout_prob": 0.1,
    "max_position_embeddings": 512,
    "type_vocab_size": 2,
    "initializer_range": 0.02,
    "layer_norm_eps": 1e-12,
    "pad_token_id": 0,
    "position_embedding_type": "absolute",
    "use_cache": true,
    "classifier_dropout": null
  },
  "training_defaults": {
    "learning_rate": 4e-5,
    "num_epochs": 10,
    "batch_size": 28,
    "gradient_accumulation_steps": 2,
    "warmup_steps": 150,
    "weight_decay": 0.01,
    "max_grad_norm": 1.0
  },
  "description": "Mini BERT model with 11M parameters, good balance for most tasks"
}
