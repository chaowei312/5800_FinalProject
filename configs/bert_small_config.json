{
  "model_name": "bert-small",
  "pretrained_path": "bert-small/pytorch_model.bin",
  "vocab_file": "bert-small/vocab.txt",
  "architecture": {
    "vocab_size": 30522,
    "hidden_size": 512,
    "num_hidden_layers": 4,
    "num_attention_heads": 8,
    "intermediate_size": 2048,
    "hidden_act": "gelu",
    "hidden_dropout_prob": 0.1,
    "attention_probs_dropout_prob": 0.1,
    "max_position_embeddings": 512,
    "type_vocab_size": 2,
    "initializer_range": 0.02,
    "layer_norm_eps": 1e-12,
    "pad_token_id": 0,
    "position_embedding_type": "absolute",
    "use_cache": true,
    "classifier_dropout": null
  },
  "training_defaults": {
    "learning_rate": 3e-5,
    "num_epochs": 10,
    "batch_size": 24,
    "gradient_accumulation_steps": 2,
    "warmup_steps": 200,
    "weight_decay": 0.01,
    "max_grad_norm": 1.0
  },
  "description": "Small BERT model with 29M parameters, balanced between performance and efficiency"
}
